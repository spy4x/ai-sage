{
  "name": "ai-sage",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "---Firebase-Emulators---": "",
    "//finds Firestore emulator PID and kills it": "",
    "emulator:kill": "lsof -n -i4TCP:8080 | grep LISTEN | awk '{ print $2 }' | xargs kill",
    "emulator": "pnpm emulator:kill && firebase emulators:start"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "firebase-tools": "^11.27.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-adapter-firebase": "^0.15.0",
    "svelte-check": "^3.0.1",
    "tailwind-highlightjs": "^2.0.1",
    "tailwindcss": "^3.3.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.2.0"
  },
  "type": "module",
  "dependencies": {
    "firebase": "^9.19.1",
    "firebase-admin": "^11.6.0",
    "highlight.js": "^11.7.0"
  }
}
