{
  "name": "ai-sage",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "---Firebase-Emulators---": "",
    "//finds Firestore emulator PID and kills it": "",
    "emulator:kill": "lsof -n -i4TCP:8080 | grep LISTEN | awk '{ print $2 }' | xargs kill",
    "emulator": "pnpm emulator:kill && firebase emulators:start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "firebase-tools": "^11.30.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "svelte": "^3.59.1",
    "svelte-adapter-firebase": "^0.15.0",
    "svelte-check": "^3.4.3",
    "tailwind-highlightjs": "^2.0.1",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.9"
  },
  "type": "module",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.2.0",
    "firebase": "^9.19.1",
    "firebase-admin": "^11.6.0",
    "highlight.js": "^11.7.0",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "*.{js,ts,css,md,svelte,html,json}": [
      "prettier --plugin-search-dir . --write",
      "git add"
    ]
  }
}
