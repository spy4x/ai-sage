rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read,write: if true; //if request.auth.uid == userId;
      
      // allow user to read their chats
      match /chats/{chatId} {
        allow read,write: if true; //if request.auth.uid == userId;
      }
    }
  }
}